<?xml version="1.0"?>
<robot name="custom_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="$(find custom_robot)/urdf/custom_robot.gazebo"/>
    <link name="base"></link>
    <joint name="base_joint" type="fixed">
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="base"/>
        <child link="base_plate"/>
    </joint>
    <link name="base_plate">
        <pose> 0 0 0.1 0 0 0 </pose>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>                    
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.0"/>
            <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
        </inertial>
        <visual name="base_plate_visual">
            <geometry>
                <mesh filename="package://custom_robot/meshes/BasePlate.dae"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.0 0.0 0.0"/>
            </geometry>
        </collision>
    </link>
    <link name="right_wheel">
        <collision name="right_wheel_collision">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
        </collision>
        <visual name="right_wheel_visual">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
        </visual>
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 1.5707 1.5707"/>
            <mass value="5"/>
            <inertia ixx=".1" ixy="0" ixz="0" iyy="0.1" iyz="0.0" izz=".1"/>
        </inertial>
    </link>
    <joint name="joint_name" type="continuous">
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="base_plate"/>
        <child link="right_wheel"/>
        <axis xyz="0.0 0.0 0.0"/>
        <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0"/>
    </joint> 
</robot>
